    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "train_dbg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "env": {
              "CUDA_VISIBLE_DEVICES": "6,7",
            },
            "args": [
                "--name",
                "d5",
                "--batch_size",
                "4",
                "--waveform_loss_mode",
                "stft_real_imag",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/",
            "skipFiles": [
                "/proj/vondrick2/basile/hf-transformers/*",
                "/proj/vondrick2/basile/hf-transformers/**",
                "/proj/vondrick2/basile/hf-transformers/**/*",
                "/proj/vondrick2/basile/hf-transformers/**/*.py",
              ]
        },
        {
            "name": "resume_dbg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "env": {
              "CUDA_VISIBLE_DEVICES": "4,5,6,7",
            },
            "args": [
                "--name",
                "v5",
                "--resume",
                "v5",
                "--batch_size",
                "16",
                "--waveform_loss_mode",
                "stft_real_imag",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/",
            "skipFiles": [
                "/proj/vondrick2/basile/hf-transformers/*",
                "/proj/vondrick2/basile/hf-transformers/**",
                "/proj/vondrick2/basile/hf-transformers/**/*",
                "/proj/vondrick2/basile/hf-transformers/**/*.py",
              ]
        },
        {
            "name": "test_dbg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/eval/test.py",
            "args": [
                "--resume",
                "v6",
                "--name",
                // "v6-st01503",
                // "v6-st01504",
                "v6-st01505",
                "--data_path",
                // "/proj/vondrick2/datasets/slakh2100_flac_redux/validation/Track01503/MIDI/S01.mid",
                // "/proj/vondrick2/datasets/slakh2100_flac_redux/validation/Track01504/MIDI/S00.mid",
                "/proj/vondrick2/datasets/slakh2100_flac_redux/validation/Track01505/MIDI/S02.mid",
                "--data_clip_mode",
                "sequential",
                "--gpu_id",
                "4",
                "--batch_size",
                "8",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/",
        },
    ]
}
